<html>
  <meta charset="utf-8" />
  <head>
    <title>Tajniacy</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    
    
    <script src="/socket.io/socket.io.js"></script>
    
    <style>
      #gameScreen {
        display: none;
      }
      #waitForGame {
        display: none;
      }
    </style>
    <link rel="stylesheet" href="index.css">
  </head>

  <body>
    <section class="vh-100">
      <div class="container h-100">
        <div id="initialScreen" class="h-100">
          <div class="d-flex flex-column align-items-center justify-content-center h-100">
            <h1>Tajniacy</h1>
            <div class="form-group">
              <button type="submit" class="btn btn-success" id="newGameButton">
                Stwórz nową grę
              </button>
            </div>
            <div class="form-group">
              <input type="text" placeholder="Podaj kod gry" id="gameCodeInput" />
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success" id="joinGameButton">
                Dołącz do gry
              </button>
            </div>
          </div>
        </div>

        <div id="waitForGame" class="h-100">
          <div class="d-flex flex-column align-items-center justify-content-center h-100">

            <h1>Id Twojego pokoju: <span id="gameCodeDisplay"></span></h1>
            <h1>Liczba oczekujących graczy: <span id="waitingPlayers"></span></h1>
          </div>
        </div>

        <div id="gameScreen" class="h-100">
          <div class="d-flex flex-column align-items-center justify-content-center h-100">
            
            <div id="descriptions">
              <input type='text' id='description' placeholder="Wpisz wskazówkę"/>
              <input type='number' id='amount' placeholder="0"/>
              <button id='sendDescription'>Wyślij</button>
            </div>

            <table id="wordGrid" class="board">
              <% for(let i=0; i<wordRows.length; i++) {%>
                <tr>
                  <% for(let j=0; j<wordRows[i].length; j++) {%>
                    <% if(revealedIdentities[i][j] == 0 && agentsIdentities[i][j] == 1) {%>
                      <td>
                        <button class="unrevealedBlue" id=<%= i.toString()+j.toString() %> onclick="clickAgent(<%= i %>, <%= j %>) type="button"><%= wordRows[i][j] %></button>
                      </td>    
                    <% } else if(revealedIdentities[i][j] == 0 && agentsIdentities[i][j] == 2) { %>  
                      <td>
                        <button class="unrevealedRed" id=<%= i.toString()+j.toString() %> onclick="clickAgent(<%= i %>, <%= j %>) type="button"><%= wordRows[i][j] %></button>
                      </td>    
                    <% } else if(revealedIdentities[i][j] == 0 && agentsIdentities[i][j] == 3) {%>
                      <td>
                        <button class="unrevealedBlack" id=<%= i.toString()+j.toString() %> onclick="clickAgent(<%= i %>, <%= j %>) type="button"><%= wordRows[i][j] %></button>
                      </td>    
                    <% } else if(revealedIdentities[i][j] == 0 && agentsIdentities[i][j] == 0) {%>
                      <td>
                        <button class="unrevealedNeutral" id=<%= i.toString()+j.toString() %> onclick="clickAgent(<%= i %>, <%= j %>) type="button"><%= wordRows[i][j] %></button>
                      </td>    
                    <% } else if(revealedIdentities[i][j] == 1 && agentsIdentities[i][j] == 1) { %>  
                      <td>
                        <button class="revealedBlue" id=<%= i.toString()+j.toString() %> onclick="clickAgent(<%= i %>, <%= j %>) type="button"><%= wordRows[i][j] %></button>
                      </td>    
                    <% } else if(revealedIdentities[i][j] == 1 && agentsIdentities[i][j] == 2) {%>
                      <td>
                        <button class="revealedRed" id=<%= i.toString()+j.toString() %> onclick="clickAgent(<%= i %>, <%= j %>) type="button"><%= wordRows[i][j] %></button>
                      </td>               
                    <% } else if(revealedIdentities[i][j] == 1 && agentsIdentities[i][j] == 0) {%>
                      <td>
                        <button class="revealedNeutral" id=<%= i.toString()+j.toString() %> onclick="clickAgent(<%= i %>, <%= j %>) type="button"><%= wordRows[i][j] %></button>
                      </td>    
                    <% } %>  
                  <% } %>
                </tr>                
              <% } %>
            </table>

          </div>
        </div>

      </div>
    </section>
  </body>
</html>
<script src="index.js"></script>